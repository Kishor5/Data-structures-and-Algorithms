# check if array is sorted

class Array_sorted_checker():
    def is_sorted(self, nums):
        n = len(nums)
        for i in range(0, n-1):
            if nums[i] > nums[i+1]:
                return False
        return True

checker = Array_sorted_checker()
nums = [1, 3, 9, 7]
print(checker.is_sorted(nums))
